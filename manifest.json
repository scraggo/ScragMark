{
  "name": "ScragMark",
  "version": "0.1",
  "description": "Markdown Bookmark / Notes",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "commands": {
    "ScragMark": {
      "suggested_key": { "default": "Alt+S" },
      "description": "ScragMark current URL"
    }
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ScragMark",      // optional; shown in tooltip
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "manifest_version": 2
}